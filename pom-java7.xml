<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>net.digitalid.utility</groupId>
    <artifactId>utility</artifactId>
    <version>1.0.0-java7</version>
    <packaging>pom</packaging>
    
    <name>Digital ID Utility</name>
    <description>This project provides utility classes for the Digital ID library.</description>
    <url>https://code.digitalid.net/digitalid/utility</url>
    
    <organization>
        <name>Synacts GmbH</name>
        <url>https://www.synacts.com</url>
    </organization>
    
    <licenses>
        <license>
            <name>To be determined</name>
            <url>https://www.synacts.com/company/#become-partner</url>
            <comments>Until the license is determined, all rights are reserved by Synacts GmbH.</comments>
        </license>
    </licenses>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <modules>
        <module>taglets-java7</module>
        <module>android-java7</module>
        <module>bootstrap-java7</module>
        <module>collaboration-java7</module>
        <module>annotations-java7</module>
        <module>interfaces-java7</module>
        <module>circumfixes-java7</module>
        <module>tuples-java7</module>
        <module>functional-java7</module>
        <module>immutable-java7</module>
        <module>string-java7</module>
        <module>exceptions-java7</module>
        <module>contracts-java7</module>
        <module>configuration-java7</module>
        <module>file-java7</module>
        <module>logging-java7</module>
        <module>processing-testset-java7</module>
        <module>processing-java7</module>
        <module>validation-java7</module>
        <module>testing-java7</module>
        <module>system-java7</module>
        <module>threading-java7</module>
        <module>casting-java7</module>
        <module>rootclass-java7</module>
        <module>freezable-java7</module>
        <module>processor-java7</module>
        <module>initialization-java7</module>
        <module>initializer-java7</module>
        <module>conversion-java7</module>
        <module>generator-java7</module>
        <module>collections-java7</module>
        <module>concurrency-java7</module>
        <module>property-java7</module>
        <module>console-java7</module>
        <module>all-java7</module>
    </modules>
    
    <repositories>
        <repository>
            <id>digitalid-releases</id>
            <name>Digital ID Releases</name>
            <url>https://repo.digitalid.net/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>digitalid-snapshots</id>
            <name>Digital ID Snapshots</name>
            <url>https://repo.digitalid.net/content/repositories/snapshots/</url>
        </repository>
    </repositories>
    
    <distributionManagement>
        <repository>
            <id>digitalid-deployment</id>
            <name>Final Releases</name>
            <url>https://repo.digitalid.net/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>digitalid-deployment</id>
            <name>Snapshot Releases</name>
            <url>https://repo.digitalid.net/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
    
    <pluginRepositories>
        <pluginRepository>
            <id>sonatype-nexus-snapshots</id>
            <name>sonatype-nexus-snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </pluginRepository>
    </pluginRepositories>
    
</project>
